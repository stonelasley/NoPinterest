{
  "manifest_version": 2,

  "name": "Not Enough Pinterest",
  "description": "Browse interest without an account.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "assets/icon.png"
  },
  "permissions": [
    "tabs",
    "*://*.pinterest.com/"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.pinterest.com/*"],
      "js": ["src/nopinterest.js"],
      "run_at": "document_end"
    }
  ]
}